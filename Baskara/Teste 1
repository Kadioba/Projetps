#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main(int argc, char** argv)
{
 float a, b, c, x1, x2, delta;
 
 printf("Digite a: ");
 scanf("%f", &a);
 printf("Digite b: ");
 scanf("%f", &b);
 printf("Digite c: ");
 scanf("%f", &c);
 
 delta = b*b - 4*a*c;
 x1 = (-b + sqrt(delta)) / (2*a);
 x2 = (-b - sqrt(delta)) / (2*a);
 
 if(delta < 0) {
 printf("Essa merda não tem raiz real");
 } else {
 printf("O valor 1 é: %.2f", x1);
 printf("");
 printf("O valor 2 é: %.2f", x2);
 }
 
 system("pause");
 return 0;
}
